{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "env": {
        "LAGO_KEY": "YOUR_KEY",
        "LAGO_HOST": "https://api.getlago.com/"
      },
      "justMyCode": false
    },
    {
      "name": "API Attach",
      "type": "python",
      "request": "attach",
      "port": 5678,
      "host": "localhost",
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/pipelines",
          "remoteRoot": "/app/pipelines"
        }
      ],
      "justMyCode": false
    }
  ]
}
